{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "eqeqeq": [
      "warn",
      "smart"
    ],
    "func-style": [
      "error",
      "declaration"
    ],
    "semi": [
      "error",
      "never"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-var": "error",
    "prefer-arrow-callback": "warn"
  }
}